body {
    background-image: url('../images/fondo.jpg');
    font-family: sans-serif;
}

#divLogin {
    background-color: rgba(255,255,255,0.2);
    width: 20%;
    height: 25%;
    position: relative;
    top: 50%;
    left: 50%;
    text-align: center;
}

    #divLogin input {
        width: 90%;
    }

    #divLogin table {
        width: 100%;
        text-align: center;
        top: 50%;
        left: 50%;
        padding 5% 5%;
    }

    #divLogin button {
        transition-duration: 0.2s;
        border-radius: 5px;
        padding: 10px 10px;
        border: none;
        font-size: 16px;
        background-color: darkblue;
        color: white;
    }


/**********************************/
header div {
    background-color: rgba(255,255,255,0.2);
    padding: 10px 10px;
}

header button {
    transition-duration: 0.2s;
    border-radius: 5px;
    padding: 10px 10px;
    border: none;
    font-size: 16px;
    background-color: darkblue;
    color: white;
}

    header button:hover {
        background-color: white;
        color: darkblue;
    }
